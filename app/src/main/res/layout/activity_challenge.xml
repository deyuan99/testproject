<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_challenge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dailychallenge"


    tools:context="ict2105.team10project.challenge">

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:id="@+id/pushbtn"
        android:layout_height="135dp"
        android:layout_below="@+id/stepbtn"
        android:layout_alignParentStart="true"
        android:alpha="0"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:id="@+id/stepbtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:alpha="0"
        android:layout_height="126dp" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:id="@+id/sprintbtn"
        android:layout_height="155dp"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pushbtn" />
</RelativeLayout>
