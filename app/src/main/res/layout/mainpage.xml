<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgwithmap">

    <Button
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_btn"
        android:ems="8"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/daily_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daily_btn"
        android:ems="8"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/play_btn"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/guild_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guild_btn"
        android:ems="8"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/daily_btn"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/leader_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leaderboard_btn"
        android:ems="8"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/guild_btn"
        android:layout_marginStart="15dp"/>

</RelativeLayout>