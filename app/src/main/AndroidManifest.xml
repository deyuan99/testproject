<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ict2105.team10project">

    <uses-feature android:name="@string/step_detector" android:required="false"/>
    <uses-feature android:name="@string/step_counter" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Login"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainPage"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".PlayView"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".DailyChallengesView"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".GuildView"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".LeaderboardView"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".dailychallenges.StepsView"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".dailychallenges.PushupsView"
            android:screenOrientation="landscape">
        </activity>

    </application>

</manifest>